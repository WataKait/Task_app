<h1 class='fw-bold m-3'><%= t('.user_tasks_list', name: current_user.name) %></h1>

<table class='border-secondary table table-bordered table-dark table-striped text-center'>
  <thead class='align-middle'>
    <tr>
      <th><%= t('.task') %></th>
      <th><%= t('.label') %></th>
      <th><%= t('.priority') %></th>
      <th><%= t('.status') %></th>
      <th><%= t('.time_limit') %></th>
      <th><%= t('.created_at') %></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.label&.name %></td>
        <td><%= task.priority.name %></td>
        <td><%= task.status.name %></td>
        <td><%= task.time_limit %></td>
        <td><%= task.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
