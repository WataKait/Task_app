<%# TODO ログイン機能実装後、user_id を取得してくる %>
<%= task.hidden_field :user_id, value: 1 %>

<table>
  <tr>
    <th><%= t(:task) %></th>
    <td><%= task.text_field :name %></td>
  </tr>
  <tr>
    <th><%= t(:label) %></th>
    <td><%= task.collection_select :label_id, @labels, :id, :name, prompt: t(:select_label) %></td>
  </tr>
  <tr>
    <th><%= t(:priority) %></th>
    <td><%= task.collection_select :priority_id, @priorities, :id, :name, prompt: t(:select_priority) %></td>
  </tr>
  <tr>
    <th><%= t(:status) %></th>
    <td><%= task.collection_select :status_id, @statuses, :id, :name, prompt: t(:select_status) %></td>
  </tr>
  <tr>
    <th><%= t(:time_limit) %></th>
    <td><%= task.datetime_field :time_limit %></td>
  </tr>
  <tr>
    <th><%= t(:description) %></th>
    <td><%= task.text_area :description %></td>
  </tr>
</table>

<%= task.submit %>
