<h1 class='fw-bold mb-3'><%= t('.task_detail') %></h1>

<div class='fs-5'>
  <div class='d-flex mb-3'>
    <div><%= t('.task') %>：</div>
    <div><%= @task.name %></div>
  </div>
  <div class='d-flex mb-3'>
    <div class='pe-1'><%= t('.label') %>：</div>
    <div><%= @task.label&.name %></div>
  </div>
  <div class='d-flex mb-3'>
    <div class='pe-1'><%= t('.priority') %>：</div>
    <div><%= @task.priority.name %></div>
  </div>
  <div class='d-flex mb-3'>
    <div class='pe-1'><%= t('.status') %>：</div>
    <div><%= @task.status.name %></div>
  </div>
  <div class='d-flex mb-3'>
    <div class='pe-1'><%= t('.time_limit') %>：</div>
    <div><%= @task.time_limit %></div>
  </div>
  <div class='d-flex mb-3'>
    <div class='pe-1'><%= t('.description') %>：</div>
    <div><%= @task.description %></div>
  </div>
</div>
