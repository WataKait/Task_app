<%= stylesheet_link_tag "tasks" %>

<h1>タスク一覧</h1>

<p><%= link_to '+ タスク作成', new_task_path %></p>

<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>ラベル</th>
      <th>優先度</th>
      <th>ステータス</th>
      <th>終了期限</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.label&.name %></td>
        <td><%= task.priority.name %></td>
        <td><%= task.status.name %></td>
        <td><%= task.time_limit %></td>
        <td><%= link_to '詳細', task %></td>
      </tr>
    <% end %>
  </tbody>
</table>
