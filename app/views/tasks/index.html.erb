<head>
 <style>
   table, th, td {
     border: solid 1px #000
   }
 </style>
</head>

<h1>タスク一覧</h1>

<%= link_to "+ タスクの作成", new_task_path %>

<table>
  <thead>
    <tr>
      <th>タスク</th>
      <th>優先度</th>
      <th>終了期限</th>
      <th>ステータス</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.priority.priority %></td>
        <td><%= task.time_limit %></td>
        <td><%= task.status.status %></td>
        <td><%= link_to '詳細', task %></td>
      </tr>
    <% end %>
  </tbody>

</table>
