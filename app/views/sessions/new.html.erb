<h1>タスク管理アプリケーション</h1>

<%= form_with(url:login_path) do |form| %>
  <table>
    <tr>
      <th><%= form.label t('.user_name') %></th>
      <td><%= form.text_field :name %></td>
    </tr>

    <tr>
      <th><%= form.label t('.password') %></th>
      <td><%= form.password_field :password %></td>
    </tr>
  </table>
  <%= form.submit t('.login') %>
<% end %>
