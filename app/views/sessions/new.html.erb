<%= flash[:alert] if flash[:alert].present? %>

<h1><%= t('.task_application') %></h1>

<%= form_with(url:login_path) do |form| %>
  <table>
    <tr>
      <th><%= form.label t('.user_name') %></th>
      <td><%= form.text_field :name %></td>
    </tr>

    <tr>
      <th><%= form.label t('.password') %></th>
      <td><%= form.password_field :password %></td>
    </tr>
  </table>
  <%= form.submit t('.login') %>
<% end %>
