<%= flash[:alert] if flash[:alert].present? %>

<h1><%= t('.task_application') %></h1>

<%= form_with(url:login_path) do |form| %>
  <div>
    <div>
      <%= form.label t('.user_name') %>
    </div>
    <div>
      <%= form.text_field :name %>
    </div>
  </div>
  
  <div>
    <div>
      <%= form.label t('.password') %>
    </div>
    <div>
      <%= form.password_field :password %>
    </div>
  </div>
  
  <div>
    <%= form.submit t('.login') %>
  </div>
<% end %>
